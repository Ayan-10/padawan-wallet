<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyCustomDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/bg0soft_light</item>
        <item name="colorOnSurface">@color/fg0_light</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomBodyTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/bright_green</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/fg4_light</item>
    </style>

    <style name="CustomTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">21sp</item>
    </style>

    <style name="CustomBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
    </style>

